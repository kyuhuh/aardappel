<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/selectedWordDisplay"
        android:textSize="30dp"
        android:textColor="#03C4FF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/firstPhoto"
        android:src="@drawable/activated"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:onClick="onClickFirst"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/selectedWordDisplay"
        android:layout_toStartOf="@+id/selectedWordDisplay" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sendFirstPhoto"
        android:src="@drawable/coloured_send"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:onClick="onClickFirst"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/selectedWordDisplay"
        android:layout_toEndOf="@+id/selectedWordDisplay" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/selectedWordDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY" />
</RelativeLayout>